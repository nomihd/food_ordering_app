<h1>Customer Dashboard</h1>

<p> Welcome <%= current_customer.first_name + " " + current_customer.last_name%> </p>
<p><%= link_to "Sign Out", destroy_customer_session_path, method: :delete, data: {confirm: "Are you sure to signout?" } %> </p>

<p><%= link_to "Edit Profile", edit_customer_registration_path %> </p>

<%= search_form_for [:customers, @q], url: customers_dashboard_index_path do |f| %>
	
	<br>
	<h3> Search
  <%#= f.label :name %>
  <%= f.search_field :name_cont %>
  <%= f.select :categories_name_eq, @categories, include_blank: "Select Category" %>
  <%= f.submit "Search" %>
</h3>

<% end %>
<h1>All Restaurants</h1>

<% unless @restaurants.blank? %>
  <div class="content table-responsive table-full-width">
    <table class="table table-hover table-stripped">
      <thead>
        <tr>
          <th><%= sort_link(@q, :name, "Name") %></th>
          <th><%= sort_link(@q, :city, "City") %></th>
          <th><%= sort_link(@q, :address, "Address") %></th>
          <th><%= sort_link(@q, :delivery_fee, "DeliveryFee") %></th>
          <th><%= sort_link(@q, :price, "Price") %></th>
          <th><%= sort_link(@q, :delivery_time, "DeliveryTime") %></th>
          
          <th colspan="6"></th>
        </tr>
      </thead>
     
      <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.city %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.delivery_fee %></td>
            <td><%= restaurant.price %></td>
            <td><%= restaurant.delivery_time %></td>
            <td><%= link_to "Show", customers_restaurant_path(restaurant) %></td>
            <!-- <td><%#= link_to "Edit", edit_restaurant_path(restaurant) %></td>
            <td><%#= link_to "Destroy", restaurant, method: :delete, data: { confirm: "Are you sure?" } %></td>  -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>